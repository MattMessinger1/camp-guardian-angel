{
  "name": "camp-registration-tests",
  "version": "1.0.0",
  "scripts": {
    "test": "vitest",
    "test:unit": "vitest run --config vitest.config.unit.ts",
    "test:readiness": "playwright test tests/readiness-workflow.spec.ts tests/integration-readiness.spec.ts",
    "test:integration": "playwright test --project=integration",
    "test:e2e": "playwright test --project=e2e-chrome",
    "test:e2e:all": "playwright test --project=e2e-chrome --project=e2e-firefox",
    "test:mobile": "playwright test --project=mobile-chrome",
    "test:full": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run test:unit && playwright test",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:setup": "playwright test --project=setup",
    "test:cleanup": "playwright test --project=cleanup"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.0.0",
    "jsdom": "^23.0.0",
    "vitest": "^1.0.0"
  }
}